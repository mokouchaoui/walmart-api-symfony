<!DOCTYPE html>
<html>
<head>
    <title>Add Product</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
</head>
<body>

<div class="container">
    <h1 class="title">Add Product</h1>
    {% for flash_message in app.flashes('success') %}
        <div class="alert alert-success" role="alert">{{ flash_message }}</div>
    {% endfor %}
    {% for flash_message in app.flashes('error') %}
        <div class="alert alert-danger" role="alert">{{ flash_message }}</div>
    {% endfor %}
</div>

<div class="container">
   <form method="post" action="{{ path('product_add') }}">
        <div class="form-row">
            <div class="form-group col">
                <label for="sku">SKU</label>
                <input type="text" class="form-control" id="sku" name="mpItem[Orderable][sku]" placeholder="SKU" required>
            </div>
            <div class="form-group col">
                <label for="productName">Product Name</label>
                <input type="text" class="form-control" id="productName" name="mpItem[Orderable][productName]" placeholder="Product Name" required>
            </div>
            <div class="form-group col">
                <label for="shortDescription">Short Description</label>
                <input type="text" class="form-control" id="shortDescription" name="mpItem[Visible][jewelry][shortDescription]" placeholder="Short Description" required>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col">
                <label for="productIdentifiers">Product Identifiers</label>
                <input type="text" class="form-control" id="productIdentifiers" name="mpItem[Orderable][productIdentifiers]" placeholder="Product Identifiers">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col">
                <label for="brand">Brand</label>
                <input type="text" class="form-control" id="brand" name="mpItem[Orderable][brand]" placeholder="Brand" required>
            </div>
            <div class="form-group col">
                <label for="price">Price</label>
                <input type="number" class="form-control" id="price" name="mpItem[Orderable][price]" placeholder="Price" required>
            </div>
            <div class="form-group col">
                <label for="mustShipAlone">Must Ship Alone</label>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="mustShipAlone" name="mpItem[Orderable][mustShipAlone]">
                    <label class="form-check-label" for="mustShipAlone">Must Ship Alone</label>
                </div>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col">
                <label for="skuUpdate">SKU Update</label>
                <input type="text" class="form-control" id="skuUpdate" name="mpItem[Orderable][skuUpdate]" placeholder="SKU Update">
            </div>
            <div class="form-group col">
                <label for="shippingWeight">Shipping Weight</label>
                <input type="number" class="form-control" id="shippingWeight" name="mpItem[Orderable][shippingWeight]" placeholder="Shipping Weight">
            </div>
            <div class="form-group col">
                <label for="gender">Gender</label>
                <input type="text" class="form-control" id="gender" name="mpItem[Visible][jewelry][gender]" placeholder="Gender">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col">
                <label for="size">Size</label>
                <input type="text" class="form-control" id="size" name="mpItem[Visible][jewelry][size]" placeholder="Size">
            </div>
            <div class="form-group col">
                <label for="color">Color</label>
                <input type="text" class="form-control" id="color" name="mpItem[Visible][jewelry][color]" placeholder="Color">
            </div>
            <div class="form-group col">
                <label for="metal">Metal</label>
                <input type="text" class="form-control" id="metal" name="mpItem[Visible][jewelry][metal]" placeholder="Metal">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col">
                <label for="mainImageUrl">Main Image URL</label>
                <input type="url" class="form-control" id="mainImageUrl" name="mpItem[Visible][jewelry][mainImageUrl]" placeholder="Main Image URL">
            </div>
            <div class="form-group col">
                <label for="secondaryImageUrl">Secondary Image URL</label>
                <input type="url" class="form-control" id="secondaryImageUrl" name="mpItem[Visible][jewelry][productSecondaryImageURL]" placeholder="Secondary Image URL">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col">
                <button class="btn btn-dark" type="submit">Submit</button>
            </div>
        </div>
    </form>
</div>

<!-- Bootstrap Modal -->

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<script>
    // Your JavaScript code goes here
</script>

</body>
</html>
